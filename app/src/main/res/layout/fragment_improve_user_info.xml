<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/login_bg"
              tools:context="com.example.andy.dangjian.ImproveUserDataActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_rect"
        android:gravity="center">

        <TextView
            android:id="@+id/operatino_identity_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:textSize="24dp"/>

        <ImageView
            android:id="@+id/operation_identity_imageview"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/identity_card_info"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="需完成验证步骤"
            android:layout_marginTop="20dp"
            android:textSize="20dp"/>

    </LinearLayout>


</LinearLayout>
