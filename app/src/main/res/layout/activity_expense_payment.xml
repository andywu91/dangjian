<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_expense_payment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context="com.example.andy.dangjian.ExpensePaymentActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="费用支付"
                android:textColor="@color/white"
                android:textSize="24dp"/>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="费用支付："
            android:textColor="@color/black"
            android:textSize="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="136.00"
            android:textColor="@color/black"
            android:textSize="24dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:text="支付方式:"
            android:textSize="18dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/alipay_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/alipay"/>

        <LinearLayout
            android:id="@+id/alipay_layout"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_alignTop="@id/alipay_icon"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/alipay_icon"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="支付宝"
                android:textColor="@color/black"
                android:textSize="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="使用支付宝进行付款"
                android:textSize="18dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/wechat_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignRight="@id/alipay_icon"
            android:layout_below="@id/alipay_icon"
            android:layout_marginTop="10dp"
            android:background="@drawable/wechat"/>

        <View
            android:id="@+id/line"
            android:layout_width="200dp"
            android:layout_height="1px"
            android:background="@color/gray"
            android:layout_below="@id/alipay_layout"
            android:layout_alignRight="@id/alipay_layout"/>

        <LinearLayout
            android:id="@+id/wechat_layout"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_alignTop="@id/wechat_icon"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/wechat_icon"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="微信"
                android:textColor="@color/black"
                android:textSize="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="使用微信进行付款"
                android:textSize="18dp"/>

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@color/white"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/union_pay"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/union_pay"/>

        <LinearLayout
            android:id="@+id/union_pay_layout"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_alignTop="@id/union_pay"
            android:layout_toRightOf="@id/union_pay"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="网银"
                android:textColor="@color/black"
                android:textSize="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="使用网银进行付款"
                android:textSize="18dp"/>

        </LinearLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black"
            android:layout_below="@id/union_pay_layout"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            />

        <ImageView
            android:id="@+id/icbc_icon"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/icbc"
            android:layout_below="@id/line2"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/boc_icon"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/boc"
            android:layout_below="@id/icbc_icon"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/cmb"
            android:layout_below="@id/boc_icon"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            />


    </RelativeLayout>


</LinearLayout>
